{
	"name": "vault",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @vault/db db:push",
		"db:studio": "turbo -F @vault/db db:studio",
		"db:generate": "turbo -F @vault/db db:generate",
		"db:migrate": "turbo -F @vault/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"@types/node": "^22.13.11"
	},
	"packageManager": "pnpm@10.8.1"
}
