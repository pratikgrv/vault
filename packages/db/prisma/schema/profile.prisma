model Profile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Profile Data
  bio     String?
  theme   Json?   @default("{}") // Stores { backgroundColor, primaryColor, etc. }
  links   Json?   @default("[]") // Stores array of { id, title, url }
  socials Json?   @default("{}") // Stores { twitter, github, etc. }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("profile")
}
