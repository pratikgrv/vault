// ============================================
// LINK - Unified for both social & regular links
// ============================================
model Link {
  id        String  @id @default(cuid())
  profileId String
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  title    String
  url      String
  type     String
  platform String? 
  icon     String? 
  order    Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([profileId])
  @@index([type])
  @@map("link")
}
